<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin_custom"
    android:paddingRight="@dimen/activity_horizontal_margin_custom"
    android:paddingTop="@dimen/activity_vertical_margin_custom"
    android:paddingBottom="@dimen/activity_vertical_margin_custom"
    android:background="#E8F5E9"
    android:fillViewport="true">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tableLayoutPrices"
                    android:background="@drawable/celda_cuerpo2">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="@string/product"
                            android:textColor="#fffff9f3"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="5dip"
                            android:id="@+id/textView8" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fffff9f3"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="@string/bolsa"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="5dip"
                            android:id="@+id/textView9" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fffff9f3"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="@string/market_price"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="5dip"
                            android:id="@+id/textView10" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fffff9f3"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="@string/tendency"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="5dip"
                            android:id="@+id/textView11" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fffff9f3"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="@string/variation"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="5dip"
                            android:id="@+id/textView12" />

                    </TableRow>
                </TableLayout>
            </HorizontalScrollView>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/export"
                        android:layout_marginTop="5dip"
                        android:background="@drawable/button_customize"
                        android:textColor="#FFFFFF"
                        android:id="@+id/button10"
                        android:layout_marginBottom="5dip"
                        android:layout_marginRight="5dip" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:layout_marginTop="5dip"
                        android:background="@drawable/button_customize"
                        android:textColor="#FFFFFF"
                        android:id="@+id/button11"
                        android:layout_marginBottom="5dip"
                        android:layout_marginLeft="5dip" />
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>