<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#E8F5E9"
    tools:context="com.app.bagsa.bagsaapp.ReportsActivity">

    <!-- Logo-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_bagsa"
        android:id="@+id/imageView2" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/separator"
        android:id="@+id/imageView3"
        android:layout_below="@+id/reportsAndNews"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView android:id="@+id/reportsAndNews"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/reportsNNews"
        android:gravity="center"
        android:textSize="30dip"
        android:textColor="#ff011807"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/separator"
        android:id="@+id/imageView4"
        android:layout_above="@+id/reportsAndNews"
        android:layout_marginTop="10dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reportsAndNews"
        android:layout_marginTop="40dip"
        android:layout_centerHorizontal="true"
        android:id="@+id/gridLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/type"
            android:textColor="#ff000000"
            android:id="@+id/textView"
            android:layout_row="0"
            android:layout_column="0" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reports"
            android:id="@+id/radioButton"
            android:layout_marginLeft="5dip"
            android:layout_row="0"
            android:layout_column="2" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/newsletters"
            android:id="@+id/radioButton2"
            android:layout_marginLeft="5dip"
            android:layout_row="0"
            android:layout_column="3" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/year"
        android:id="@+id/textView2"
        android:textColor="#ff000000"
        android:layout_marginTop="10dip"
        android:layout_row="1"
        android:layout_column="0" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerYear"
            android:layout_marginTop="10dip"
            android:layout_row="1"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/month"
            android:id="@+id/textView3"
            android:textColor="#ff000000"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="10dip"
            android:layout_row="1"
            android:layout_column="2" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerMonth"
            android:layout_marginTop="10dip"
            android:layout_row="1"
            android:layout_column="3" />
    </GridLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/generate"
        android:id="@+id/button7"
        android:layout_below="@+id/gridLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp" />


</RelativeLayout>
