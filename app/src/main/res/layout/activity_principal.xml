<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#E8F5E9"
    tools:context="com.app.bagsa.bagsaapp.PrincipalActivity">

    <!-- Logo borrar emiliano este comentario dejar solo Logo otramas-->
    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_bagsa"
        android:id="@+id/imageView2" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/notifications"
                android:id="@+id/button"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:layout_column="0" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/price_cons"
                android:id="@+id/button2"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:layout_column="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/reports"
                android:id="@+id/button3"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:layout_column="0" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/newsletters"
                android:id="@+id/button4"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:layout_column="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/questions"
                android:id="@+id/button5"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:layout_column="0" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/transactions"
                android:id="@+id/button6"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:layout_column="1" />
        </TableRow>
    </TableLayout>

    <CalendarView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/calendarView"
        android:layout_marginTop="5dip"
        android:layout_below="@+id/tableLayout"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
